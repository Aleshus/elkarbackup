<!DOCTYPE html>

{% trans_default_domain 'BinovoElkarBackup' %}

<html>
    <head>
        <title>{% block title %}ElkarBackup{% endblock %}</title>

        <!-- Bootstrap 3.3-->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" media="screen" />
        
        <!-- Elkarbackup CSS -->
        <link rel="stylesheet" href="{{ asset('css/elkarbackup.css') }}" media="screen" />

    </head>
    <body class="login {%if not disable_background %} bg2{% else %} nobg{% endif %}">

                  <div class="container">

                      <form class="form-signin" role="form" action="{{ path('login_check') }}" method="post">

                          <h2 class="login-elkarbackup">{% trans %}Backup server login{% endtrans %}</h2>


                          <div class="form-group">
                              <div class="input-group">
                                  <div class="input-group-addon">
                                      <div class="glyphicon glyphicon-user"> </div>
                                  </div>
                                  <input class="form-control" id="username" name="_username" type="text" placeholder="{% trans %}Username{% endtrans %}" required autofocus />
                              </div>
                          </div>

                          <div class="form-group">
                              <div class="input-group">
                                  <div class="input-group-addon">
                                      <div class="glyphicon glyphicon-lock"> </div>
                                  </div>
                                  <input type="password" class="form-control" id="password" name="_password" placeholder="{% trans %}Password{% endtrans %}" required />
                              </div>
                          </div>

                          {% if error %}
                          <div class="message">
                              <p class="alert alert-warning">
                                      {{ error.message }}
                              </p>
                          </div>
                          {% endif %}

                          <div class="form-group">
                              <div class="col-sm-8 nopadding language">
                              </div>

                              <div class="col-sm-4 nopadding">
                                  <button class="btn btn-login btn-default btn-block" type="submit"><span class="glyphicon glyphicon-lock"></span> {% trans %}Login{% endtrans %}</button>
                              </div>
                          </div>
                          <div class="row">
                            <div class="version pull-right">
                              <p>v1.3.3</p>
                            </div>
                          </div>
                      </form>

                  </div>


    </body>
</html>
